{% import 'CheminDuSonSiteBundle:Include:macros/notification.html.twig' as notification %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Chemin du son - {% block pageTitle %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Vollkorn:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
    {% block stylesheets %}
        {% stylesheets
                        'build/css/base.css' 'vendor/select2/select2.css' 'vendor/datetimepicker/jquery.datetimepicker.css' output="css/compiled/main.css" filter='?yui_css,cssrewrite' %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    {% javascripts
                'vendor/jquery/jquery.js'
                'vendor/jqueryui/ui/jquery-ui.js'
                'vendor/classie/classie.js'
                'vendor/select2/select2.js'
                'vendor/datetimepicker/jquery.datetimepicker.js'
                'bundles/bazingajstranslation/js/translator.min.js'
                'build/js/inline-edit.js'
                'build/js/nav.js'
                'build/js/form.js'
                 %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->

  </head>

  <body>
    <div id="site-wrapper">
        <div id="top-bar">
          <span id="menu-trigger"><i id="menu-trigger-icon" class="icon-cds-menu"></i></span>
          <div id="logo-container">
            <a id="site-title-logo" href="#"><img src="{{ asset('bundles/chemindusonsite/img/logo2.png') }}" title="Chemin du son - logo" /></a>
          </div>
          <nav id="navigation-menu">
           {{ knp_menu_render('main',  {'currentClass' : 'active'}) }}
          </nav><!--/.nav-collapse -->
          <div id="profile-container">
            <span><a href="{{ path('fos_user_profile_show') }}"><i class="icon-cds-user"></i></a></span>
          </div>
        </div>

        <div class="body">
        {% block notification %}
                {{ notification.notification() }}
        {% endblock %}
        {% block content %}

        {% endblock content %}
        </div> <!-- /container -->

    </div>

  </body>
</html>
