{% import 'CheminDuSonSiteBundle:Include:macros/notification.html.twig' as notification %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Chemin du son - {% block pageTitle %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
	{% stylesheets 'bundles/chemindusonsite/css/bootstrap.css'
					'bundles/chemindusonsite/css/my-bootstrap.css'
					 output="css/compiled/main.css" filter='?yui_css,?cssrewrite' %}
	    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}
	{% stylesheets
					'bundles/chemindusonsite/scss/style.scss' output="css/compiled/main.css" filter='?yui_css,?cssrewrite,compass' %}
	    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
   
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-static-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#">{{ "cheminduson.title" | trans  }}</a>
          <div class="nav-collapse collapse">
           {{ knp_menu_render('main',  {'currentClass' : 'active'}) }}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
	{% block notification %}
			{{ notification.notification() }}
	{% endblock %}
    {% block content %}
    
    {% endblock content %}
    </div> <!-- /container -->

	{% javascripts
			'bundles/chemindusonsite/js/jquery-1.10.1.min.js'
			'bundles/bazingaexposetranslation/js/translator.min.js'
			'bundles/chemindusonsite/js/bootstrap.js' output="js/compiled/main.js" filter='?yui_js' %}
	    <script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}

  </body>
</html>
