{% import 'CheminDuSonSiteBundle:Include:macros/notification.html.twig' as notification %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Chemin du son - {% block pageTitle %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Vollkorn:400,400italic,700,700italic' rel='stylesheet' type='text/css'>	
	
	{% stylesheets
					'bundles/chemindusonsite/css/icons.css' 'bundles/chemindusonsite/scss/style.sass' 'bundles/chemindusonsite/scss/form.sass' output="css/compiled/main.css" filter='?yui_css,cssrewrite' %}
	    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
   
  </head>

  <body>
  	<div id="site-wrapper"> 
        <div id="top-bar">
          <span id="menu-trigger"><i id="menu-trigger-icon" class="icon-cds-menu"></i></span>
          <div id="logo-container">    
          	<a id="site-title-logo" href="#"><img src="{{ asset('bundles/chemindusonsite/img/logo2.png') }}" title="Chemin du son - logo" /></a>
          </div>
          <nav id="navigation-menu">
           {{ knp_menu_render('main',  {'currentClass' : 'active'}) }}
          </nav><!--/.nav-collapse -->
        </div>

	    <div class="body">
		{% block notification %}
				{{ notification.notification() }}
		{% endblock %}
	    {% block content %}
	    
	    {% endblock content %}
	    </div> <!-- /container -->
	
		{% javascripts
				'bundles/chemindusonsite/js/jquery-1.10.1.min.js'
				'bundles/bazingaexposetranslation/js/translator.min.js'
				'bundles/chemindusonsite/js/classie.js'
				'bundles/chemindusonsite/js/nav.coffee'
				 output="js/compiled/main.js" filter='?yui_js' %}
		    <script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
	</div>

  </body>
</html>
