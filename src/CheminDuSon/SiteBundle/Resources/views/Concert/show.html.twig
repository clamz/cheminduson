{% extends '::base.html.twig' %}

{% block content %}
    <div id="concert-container">
        <h1 id="concert-title">{{ concert.name }}</h1>
        <h2>Groupes : </h2>
        <div id="concert-groups-container">
            {% for group in concert.groups %}
                <div class='group-container'>
                    <a href="{{ path('chemin_du_son.group.show', { 'slug' : group.slug }) }}"><img src="{{ asset( group.image.webPath) }}" height="100" /></a>
                    <div class="group-legend">
                        <a href="{{ path('chemin_du_son.group.show', { 'slug' : group.slug }) }}">{{ group.name }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock content %}